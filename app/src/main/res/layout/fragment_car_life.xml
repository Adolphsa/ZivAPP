<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_car_life"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_titlebar"/>


    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_service_bg"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/shape_service_font_ng"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="车辆服务"
                android:padding="8dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                style="@style/carLifeCarButtonStyle"
                android:id="@+id/bt_car_life_query"
                android:text="违章查询"
                android:drawableBottom="@mipmap/violation_query"
                />

            <Button
                style="@style/carLifeCarButtonStyle"
                android:id="@+id/violation_query"
                android:text="轨迹记录"
                android:drawableBottom="@mipmap/track_record"
                />

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/layout_service"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        >
        <Button
            style="@style/carLifeServiceButtonStyle"
            android:id="@+id/bt_car_gas_station"
            android:text="加油站"
            android:drawableBottom="@mipmap/gas_station_icon"
            />

        <Button
            style="@style/carLifeServiceButtonStyle"
            android:id="@+id/bt_bank"
            android:layout_width="wrap_content"
            android:text="银行"
            android:drawableBottom="@mipmap/bank_icon"
            />
        <Button
            style="@style/carLifeServiceButtonStyle"
            android:id="@+id/bt_hotel"
            android:text="酒店"
            android:drawableBottom="@mipmap/hotel_icon"
            />
        <Button
            style="@style/carLifeServiceButtonStyle"
            android:id="@+id/bt_parking"
            android:text="停车场"
            android:drawableBottom="@mipmap/parking_icon"
            />
    </LinearLayout>


</LinearLayout>