<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_pop_backgroud"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_popwindow_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textSize="13sp"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_popwindow_address"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:text="测试"
            android:padding="3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="false"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_go_there"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:text="到这儿"
        android:drawableTop="@drawable/selector_go_there"
        android:layout_toRightOf="@+id/ll_text"
        android:background="@null"
        android:textColor="@drawable/selector_go_there_text"
        />
</RelativeLayout>