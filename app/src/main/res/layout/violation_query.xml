<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="违章查询"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="5dp"
        android:background="#00c8ff"
        android:textColor="#ffffff"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/violation_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="号牌类型"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:layout_centerVertical="true"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/violation_car_type"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            >

        </Spinner>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/violation_wenhao"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/violation_car_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询城市"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深圳"
            android:textSize="16sp"
            android:textColor="#00c8ff"
            android:layout_toRightOf="@id/violation_car_city"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/violation_right"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/violation_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号码"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/violation_car_number"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/violation_car_number"
            android:layout_marginLeft="70dp"
            android:hint="请输入车牌号"
            android:background="@null"
            android:layout_centerVertical="true"
            android:padding="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/violation_car_engine_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发动机号"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/violation_car_engine_number"
            android:layout_marginLeft="40dp"
            android:hint="请输入全部发动机号"
            android:background="@null"
            android:layout_centerVertical="true"
            android:padding="5dp"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/violation_wenhao"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/violation_car_frame_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车架号码"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/violation_car_frame_number"
            android:layout_marginLeft="40dp"
            android:hint="请输入全部车架号"
            android:background="@null"
            android:layout_centerVertical="true"
            android:padding="5dp"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/violation_wenhao"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="开始查询"
        android:background="#00c8ff"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        />

</LinearLayout>