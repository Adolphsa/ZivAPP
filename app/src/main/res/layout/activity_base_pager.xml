<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_base_pager"
        android:clickable="true"
        android:background="@drawable/selector_base_pager_baseground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路线简介"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/tv_describe"
            android:textColor="@android:color/darker_gray"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"/>
    <Button
        android:id="@+id/bt_map_navigation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="查看地图导航"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="#00c8ff"
        android:textSize="18sp"
        />
</LinearLayout>